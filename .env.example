# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# RPC URL
RPC_URL=your-rpc-url
RPC_URL_FALLBACK=your-rpc-url-fallback

# Site URL override
SITE_URL=https://localhost:3000

# Secret for API auth tokens
SECRET=secret

# Database URL
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres # direct
# DATABASE_URL=postgresql://postgres.pooler-dev:postgres@localhost:54329/postgres # pooler-dev

# Telegram bot token and chat ID to send reports to
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Revalidate secret for cache revalidation API
REVALIDATE_SECRET=revalidate-secret


### Telemetry variables

# Service name for tracing
OTEL_SERVICE_NAME=ethproofs-api

# OTLP Exporter endpoint - where to send traces
# Leave empty to disable OpenTelemetry tracing
OTEL_EXPORTER_OTLP_ENDPOINT=

# Set protocol "grpc" or "http" in case of a custom port
# of the endpoint (not 4317 - grpc or 4318 - http).
OTLP_PROTOCOL=

# OTLP Headers (as JSON string) - for authentication with your monitoring service
# Examples:
# - DataDog: {"dd-api-key":"your-datadog-api-key"}
# - Grafana Cloud: {"Authorization":"Basic BASE64_ENCODED_CREDENTIALS"}
OTEL_EXPORTER_OTLP_HEADERS={}

# Function timeout (in milliseconds) - for timeout warnings
FUNCTION_TIMEOUT_MS=30000

# Telemetry timeout headroom (in milliseconds) - how early to warn before timeout
TELEMETRY_TIMEOUT_HEADROOM_MS=2000
